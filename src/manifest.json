{
  "manifest_version": 3,
  "name": "Kit IA Emprendedor",
  "version": "0.1.0",
  "description": "Gestiona tus GPTs oficiales del Kit IA Emprendedor de forma r√°pida y eficiente",
  "author": "Carlos Rodera",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["content/content-styles.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "Kit IA Emprendedor"
  },
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar/index.html",
        "sidebar/styles/sidebar.css",
        "sidebar/sidebar.js",
        "auth/login.html",
        "auth/callback.html",
        "assets/*",
        "content/content-styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Alt+Shift+K",
        "mac": "Alt+Shift+K"
      },
      "description": "Mostrar/ocultar el panel de Kit IA Emprendedor"
    }
  },
  
  "minimum_chrome_version": "120"
}